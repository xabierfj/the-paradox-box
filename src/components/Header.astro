---
import { Menu } from "@lucide/astro";

interface NavLink { href: string; label: string }
const navLinks: NavLink[] = [
  { href: '/#rooms', label: 'The Rooms' },
  { href: '/#about', label: 'About Us' },
  { href: '/#', label: 'FAQ' },
  { href: '/#', label: 'Contact' },
];
---
<header class="fixed inset-x-0 top-0 z-50 border-b border-gray-800 shadow-black/20 drop-shadow-lg backdrop-blur-md">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 items-center justify-between md:h-20">
      <a href="/" class="flex-shrink-0 text-xl font-bold text-[var(--color-text)] transition-colors duration-300 hover:text-[var(--color-glow)] md:text-2xl">
        The Paradox Box
      </a>
      <nav class="hidden md:flex" aria-label="Main navigation">
        <ul class="flex items-center gap-8">
          {navLinks.map((link) => (
            <li>
              <a href={link.href} class="relative font-medium text-[var(--color-text)] transition-colors duration-300 hover:text-[var(--color-glow)]">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </nav>
      <div class="hidden items-center md:flex">
        <a href="/booking" class="rounded-md bg-[var(--color-cta)] px-6 py-2 font-semibold text-white transition-all duration-300 hover:scale-105 hover:bg-[var(--color-cta)]/90 hover:shadow-[var(--color-cta)]/25 hover:shadow-lg">
          Book Now
        </a>
      </div>
      <button
        class="flex h-10 w-10 items-center justify-center rounded-md text-[var(--color-text)] transition-colors duration-300 hover:bg-gray-800 hover:text-[var(--color-glow)] md:hidden"
        aria-controls="main-nav"
        aria-expanded="false"
      >
        <Menu class="h-6 w-6" />
        <span class="sr-only">Open menu</span>
      </button>
    </div>
  </div>
</header>
