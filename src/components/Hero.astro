---
import { Image } from "astro:assets";
import heroImage from "../assets/hero.png";
import MouseScroll from "./UI/MouseScroll.astro";

const widths = [450, 800, 1200];
const sizes = "100vw";
---

<section id="hero" class="relative flex min-h-screen items-center justify-center text-center">
  <div class="absolute inset-0 opacity-40">
    <Image 
      src={heroImage} 
      alt="Hero Image" 
      class="h-full w-full object-cover" 
      loading="eager" 
      widths={widths} 
      sizes={sizes} />
  </div>
  
  <div class="relative z-10 max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
    <!-- Main heading with gradient text -->
    <h1 class="mb-8">
      <span class="block text-4xl sm:text-5xl md:text-7xl lg:text-8xl font-extrabold tracking-tight leading-none">
        <span class="bg-gradient-to-r from-[var(--color-text)] via-[var(--color-glow)] to-[var(--color-accent-teal)] bg-clip-text text-transparent">
          Reality is a Puzzle.
        </span>
      </span>
      <span class="block mt-2 text-3xl sm:text-4xl md:text-6xl lg:text-7xl font-bold text-[var(--color-text)]">
        Can You Solve It?
      </span>
    </h1>
    
    <!-- Subtitle with enhanced styling -->
    <p class="mx-auto mb-12 max-w-3xl text-lg md:text-xl lg:text-2xl text-[var(--color-text)]/90 leading-relaxed">
      <span class="font-semibold text-[var(--color-glow)]">60 minutes.</span> 
      <span class="font-semibold text-[var(--color-accent-teal)]">A locked door.</span> 
      <span class="font-semibold text-[var(--color-glow)]">A world that defies logic.</span>
      <br class="hidden sm:block" />
      Welcome to <span class="font-bold text-[var(--color-text)]">The Paradox Box</span>.
    </p>
    
    <!-- CTA Buttons -->
    <div class="flex flex-col sm:flex-row gap-4 sm:gap-6 justify-center items-center">
      <a href="/#rooms" 
         class="px-8 py-4 border-2 border-[var(--color-text)]/30 text-[var(--color-text)] font-semibold text-lg rounded-lg hover:border-[var(--color-glow)] hover:text-[var(--color-glow)] hover:bg-[var(--color-glow)]/5 transition-all duration-300">
        Explore Rooms
      </a>
    </div>
  </div>
  <MouseScroll />
</section>
