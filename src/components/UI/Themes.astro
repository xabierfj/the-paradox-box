---
import type { CollectionEntry } from 'astro:content';
interface Props {
  room: CollectionEntry<'rooms'>;
}
const { room } = Astro.props as Props;
---

<div>
  <span class="cursor-default text-xs font-semibold tracking-wide text-white/60">Themes</span>
  <div class="mt-2 flex flex-wrap gap-2">
    {room.data.theme.map((t) => (
      <span class="cursor-default rounded-full border border-white/10 bg-white/5 px-3 py-1 text-xs font-medium text-white/70 transition-colors hover:border-[var(--color-glow)]/40 hover:text-white">
        {t}
      </span>
    ))}
  </div>
  </div>
</div>
