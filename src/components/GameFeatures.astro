---
import { Users, Star, Clock } from "@lucide/astro";
export interface Props {
  title: string;
  data: string;
  icon: string;
}
const { title, data, icon } = Astro.props;
---

<div class="group rounded-lg border border-white/10 bg-black/30 px-3 py-3">
  {icon === "users" && <Users class="mx-auto mb-1 h-5 w-5 text-white/70 group-hover:text-[var(--color-glow)]" />}
  {icon === "star" && <Star class="mx-auto mb-1 h-5 w-5 text-white/70 group-hover:text-[var(--color-glow)]" />}
  {icon === "clock" && <Clock class="mx-auto mb-1 h-5 w-5 text-white/70 group-hover:text-[var(--color-glow)]" />}
  <div class="cursor-default text-sm font-medium text-white/50 uppercase">{title}</div>
  <div class="cursor-default text-sm font-semibold text-white">{data}</div>
</div>

